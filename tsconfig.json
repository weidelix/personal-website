{
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", "__sapper__/*", "public/*"],
	"compilerOptions": {
		"moduleResolution": "node",
		"target": "es6",
		"importsNotUsedAsValues": "remove",
		"isolatedModules": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@pager/*": ["src/pager/*"],
			"@img/*": ["src/img/*"],
			"@pages/*": ["src/pages/*"]
		},
		"types": [
			"svelte",
			"svelte/store", 
			"svelte/motion",
			"svelte/transition",
			"svelte/animate",
			"svelte/easing"
		]
	}
}